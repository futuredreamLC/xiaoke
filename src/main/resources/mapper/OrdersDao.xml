<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaoke.springboot.dao.OrdersDao">

    <resultMap type="com.xiaoke.springboot.entity.Orders" id="OrdersMap">
        <result property="orderId" column="order_id" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="userTel" column="user_tel" jdbcType="VARCHAR"/>
        <result property="orderDate" column="order_date" jdbcType="TIMESTAMP"/>
        <result property="payDate" column="pay_date" jdbcType="TIMESTAMP"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="total" column="total" jdbcType="NUMERIC"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="OrdersMap">
        select
          order_id, user_id, user_name, user_tel, order_date, pay_date, address, total, status
        from xiaoke.orders
        where order_id = #{orderId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="OrdersMap">
        select
          order_id, user_id, user_name, user_tel, order_date, pay_date, address, total, status
        from xiaoke.orders
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="OrdersMap">
        select
          order_id, user_id, user_name, user_tel, order_date, pay_date, address, total, status
        from xiaoke.orders
        <where>
            <if test="orderId != null and orderId != ''">
                and order_id = #{orderId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="userTel != null and userTel != ''">
                and user_tel = #{userTel}
            </if>
            <if test="orderDate != null">
                and order_date = #{orderDate}
            </if>
            <if test="payDate != null">
                and pay_date = #{payDate}
            </if>
            <if test="address != null and address != ''">
                and address = #{address}
            </if>
            <if test="total != null">
                and total = #{total}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="orderId" useGeneratedKeys="true">
        insert into xiaoke.orders(user_id, user_name, user_tel, order_date, pay_date, address, total, status)
        values (#{userId}, #{userName}, #{userTel}, #{orderDate}, #{payDate}, #{address}, #{total}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update xiaoke.orders
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="userTel != null and userTel != ''">
                user_tel = #{userTel},
            </if>
            <if test="orderDate != null">
                order_date = #{orderDate},
            </if>
            <if test="payDate != null">
                pay_date = #{payDate},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="total != null">
                total = #{total},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
        </set>
        where order_id = #{orderId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from xiaoke.orders where order_id = #{orderId}
    </delete>

</mapper>